- title 'Users'

= header do
  %h1 Users

%table
  %thead
    %tr
      %th Login
      %th Name

  %tbody
    - @users.each do |user|
      %tr
        %td= user.login
        %td= user.name
        %td.controls
          = link_to 'Edit', edit_admin_user_path(user)


%p
  = link_to 'New', new_admin_user_path, class: 'btn'
